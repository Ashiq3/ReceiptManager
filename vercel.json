{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}